{% extends 'base.html.twig' %}

{% block body %}
	<div class="container">
		<h1 class="text-decoration-underline mt-5">Toutes les catégories</h1>
		<h5 class="">Les catégories sont les suivantes :</h5>


		{% for category in categories %}
			<a href="{{ path('app_category', {'slug': category.slug}) }}">{{ category.name }}</a><br>

		{% endfor %}
		<a href="{{ path('app_categories') }}">Toutes les catégories</a>
		<h1 class="text-decoration-underline mt-5">{{ category.name }}</h1>
		<h5 class="mb-5">Cette catégorie contient
			{{ category.products|length  }}
			produits.</h5>

		{# {{ dump(category.products) }} #}

		<div class="row row-gap-4">
			{% for product in category.products %}
				{# {{ dump(product) }} #}
				{{ include('category/card.html.twig', { 'product': product }) }}
			{% endfor %}
		</div>


	</div>
</div>{% endblock %}
