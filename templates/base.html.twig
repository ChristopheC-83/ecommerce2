<!doctype html>
<html lang="fr" data-bs-theme="auto">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>La Boutique Française - 100% Made in France</title>
		{# <meta name="description" content="{{meta_description}}"> #}

		<link rel="stylesheet" href="{{ asset('assets/css/style.css')}}">

		<link
		href="{{ asset('assets/css/bootstrap.min.css')}}" rel="stylesheet">

		<!-- Custom styles for this template -->
		<link href="{{ asset('assets/css/carousel.css')}}" rel="stylesheet">
		<link href="{{ asset('assets/css/custom.css')}}" rel="stylesheet">
		<script src="https://unpkg.com/feather-icons"></script>
		{# icones de https://feathericons.com/ #}
	</head>
	<body class=" d-flex flex-column min-vh-100">

		<header data-bs-theme="dark " class="">
			<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
				<div class="container-fluid">
					<a class="navbar-brand" href="{{path('app_home')}}">La Boutique Française</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="collapse navbar-collapse" id="navbarCollapse">
						<ul class="navbar-nav me-auto mb-2 mb-md-0">
							
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_categories') }}">Catalogue</a>
							</li>
							{% for category in allCategories %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('app_category', {'slug': category.slug}) }}">{{category.name}}</a>
							</li>
							{% endfor %}
							
						</ul>
						<div
							class="speed-menu">
							{# app est une variable globale. app.user contient les infos du user connecté, sinon = null #}
							{% if app.user %}

								<a href="{{path('app_account')}}" class="text-decoration-none ">
									<i data-feather="user"></i>
									{{ app.user.firstname }}
								</a>

							{% else   %}

								<a href="{{path('app_login')}}" class="text-decoration-none">
									<i data-feather="user"></i>
								</a>

							{% endif  %}

							<a href="{{path('app_cart')}}">
								<i data-feather="shopping-cart"></i>
								<span class="badge text-bg-light">{{ fullCartQuantity }}</span>
							</a>
						</div>
					</div>
				</div>
			</nav>
		</header>

		<main class=" flex-grow-1 position-relative">

			<div class="container_alerts">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label }} containerForm mx-auto my-4">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}
            </div>

			{# contient les infos du user connecté ou null si pas de connexion #}
			{# {{ dump(app.user) }} #}
			{% block body %}{% endblock %}
		</main>


		<!-- FOOTER -->
		<footer class="container mt-5">
			<p>&copy; 2017–2024 La Boutique Française
				<a href="#">CGV</a>
				&middot;
				<a href="#">CGU</a>
			</p>
		</footer>

		<script src="{{ asset('assets/js/bootstrap.bundle.min.js')}}"></script>
		<script src="{{ asset('assets/js/global.js')}}"></script>
		<script src="{{ asset('assets/js/custom.js')}}"></script>
	</body>
</html>
